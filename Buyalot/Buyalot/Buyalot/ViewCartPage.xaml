<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Buyalot.ViewCartPage"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             Shell.FlyoutBehavior="Disabled"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#2B0B98">

    <Grid RowDefinitions="Auto,*">

        <Grid Padding="20"
              ColumnDefinitions="Auto,*,Auto"
              VerticalOptions="Start"
              HorizontalOptions="Fill">

            <Frame HeightRequest="60"
                   WidthRequest="60"
                   CornerRadius="30"
                   Padding="0"
                   IsClippedToBounds="True"
                   HorizontalOptions="Start"
                   VerticalOptions="Center"
                   Margin="0,0,10,0"
                   BackgroundColor="White">
                <ImageButton Source="backbutton.png"
                             Aspect="AspectFill"
                             BackgroundColor="Transparent"
                             Clicked="OnBackClicked"/>
            </Frame>

            <Grid Grid.Column="1" RowDefinitions="*,*" VerticalOptions="Center">
                <Label Text="Cart"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalTextAlignment="Start"/>
                <Label Text="Glass Recycling!"
                       FontSize="14" Grid.Row="1"
                       TextColor="#E0E0E0"
                       HorizontalTextAlignment="Start"/>
            </Grid>

            <Grid Grid.Column="2" HorizontalOptions="End" VerticalOptions="Center">
                <ImageButton Source="cart.png"
                             HeightRequest="35"
                             WidthRequest="35"
                             BackgroundColor="Transparent"
                             Command="{Binding ViewCartCommand}"
                             IsVisible="{Binding IsCartVisible}"/>
                <Border BackgroundColor="White"
                        HeightRequest="18"
                        WidthRequest="18"
                        StrokeShape="RoundRectangle 9"
                        HorizontalOptions="End"
                        VerticalOptions="Start"
                        TranslationX="10"
                        TranslationY="-5"
                        IsVisible="{Binding IsCartVisible}">
                    <Label Text="{Binding CartCount}"
                           FontSize="10"
                           TextColor="Blue"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center"
                           FontAttributes="Bold"/>
                </Border>
            </Grid>
        </Grid>

        <VerticalStackLayout Padding="20" Spacing="10" Grid.Row="1" BackgroundColor="White">
            <CollectionView x:Name="cartList"
                            Margin="0,10"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="#ccc"
                               CornerRadius="10"
                               Padding="10"
                               Margin="0,5"
                               BackgroundColor="White">
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="18" TextColor="Black" />
                                <Label Text="{Binding Type}" FontSize="14" TextColor="#666"/>
                                <Label Text="{Binding Price, StringFormat='R{0:F2}'}" TextColor="#008000"/>
                                <Button Text="Remove"
                                        Clicked="OnRemoveClicked"
                                        BackgroundColor="#ef473a"
                                        TextColor="White"
                                        CornerRadius="8"
                                        CommandParameter="{Binding .}"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label x:Name="totalLabel"
                   Text="Total: R0.00"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="#2B0B98"
                   HorizontalOptions="Center"/>

            <HorizontalStackLayout Spacing="10" Margin="0,10,0,0">
                <Button Text="Checkout"
                        Clicked="OnCheckoutClicked"
                        BackgroundColor="#56ab2f"
                        TextColor="White"
                        CornerRadius="10"
                        HorizontalOptions="FillAndExpand"/>

                <Button Text="Clear Cart"
                        Clicked="OnClearCartClicked"
                        BackgroundColor="#FFB300"
                        TextColor="White"
                        CornerRadius="10"
                        HorizontalOptions="FillAndExpand"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
