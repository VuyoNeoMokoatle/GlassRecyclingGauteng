<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Buyalot.ViewProductsPage"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             Shell.FlyoutBehavior="Disabled"
             BackgroundColor="#2B0B98">

    <Grid RowDefinitions="Auto,*">

        <Grid Padding="20"
              ColumnDefinitions="Auto,*,Auto"
              VerticalOptions="Start"
              HorizontalOptions="Fill">

            <Frame HeightRequest="60"
                   WidthRequest="60"
                   CornerRadius="30"
                   Padding="0"
                   IsClippedToBounds="True"
                   HorizontalOptions="Start"
                   VerticalOptions="Center"
                   Margin="0,0,10,0"
                   BackgroundColor="White">
                <ImageButton Source="backbutton.png"
                             Aspect="AspectFill"
                             BackgroundColor="Transparent"
                             Clicked="OnBackClicked"/>
            </Frame>

            <Grid Grid.Column="1" RowDefinitions="*,*" VerticalOptions="Center">
                <Label Text="View Products"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalTextAlignment="Start"/>
                <Label Text="Glass Recycling!"
                       FontSize="14" Grid.Row="1"
                       TextColor="#E0E0E0"
                       HorizontalTextAlignment="Start"/>
            </Grid>

            <Grid Grid.Column="2" HorizontalOptions="End" VerticalOptions="Center">
                <ImageButton Source="cart.png"
                             HeightRequest="35"
                             WidthRequest="35"
                             BackgroundColor="Transparent"
                             Command="{Binding ViewCartCommand}"
                             IsVisible="{Binding IsCartVisible}"/>
                <Border BackgroundColor="White"
                        HeightRequest="18"
                        WidthRequest="18"
                        StrokeShape="RoundRectangle 9"
                        HorizontalOptions="End"
                        VerticalOptions="Start"
                        TranslationX="10"
                        TranslationY="-5"
                        IsVisible="{Binding IsCartVisible}">
                    <Label Text="{Binding CartCount}"
                           FontSize="10"
                           TextColor="Blue"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center"
                           FontAttributes="Bold"/>
                </Border>
            </Grid>
        </Grid>

        <VerticalStackLayout Padding="20" Grid.Row="1" BackgroundColor="White">

            <CollectionView x:Name="productsList"
                            SelectionMode="None"
                            Margin="0,10">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border StrokeShape="RoundRectangle 10"
                                Padding="10"
                                Margin="0,5"
                                BackgroundColor="White">
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="18"/>
                                <Label Text="{Binding Type}" FontSize="14" TextColor="#666"/>
                                <Label Text="{Binding Price, StringFormat='R{0:F2}'}" TextColor="#008000"/>

                                <HorizontalStackLayout Spacing="10" Margin="0,5,0,0">
                                    <Button Text="Add to Cart"
                                            Clicked="OnAddToCartClicked"
                                            BackgroundColor="#53AA12"
                                            TextColor="White"
                                            CornerRadius="8"
                                            CommandParameter="{Binding .}"/>
                                    <Button Text="Remove"
                                            Clicked="OnRemoveClicked"
                                            BackgroundColor="#ef473a"
                                            TextColor="White"
                                            CornerRadius="8"
                                            CommandParameter="{Binding .}"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </Grid>
</ContentPage>
